[urgency_low]
    background = "#1b1f1a"
    foreground = "#e6e2d6"
    frame_color = "#3f5e4a"    # pine
    timeout = 6

[urgency_normal]
    background = "#1b1f1a"
    foreground = "#e6e2d6"
    frame_color = "#8fa88a"    # sage
    timeout = 8

[urgency_critical]
    background = "#a4636a"     # berry
    foreground = "#1b1f1a"     # bg (dark text on berry)
    frame_color = "#c4a86a"    # gold
    timeout = 0

# optional: make appname stand out slightly (gold), without being loud
[appname]
    summary = "*"
    foreground = "#c4a86a"
